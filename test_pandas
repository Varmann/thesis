import random
import pandas as pd

filename = r'C:/Users/vmanukyan/Documents/dev/thesis/nets/Training_Data.csv'
df = pd.read_csv(filename, sep = ";")
print(df)
#%%
df.loc[len(df)] = [random.randint(1,20),random.randint(1,20),random.randint(1,20)]
print(df)
# %%
df.to_csv( filename, sep= ";",index=False)

df = pd.read_csv(filename, sep = ";")
print(df)
#%%
import matplotlib.pyplot as plt
#plt.scatter(loss,accuracy)
plt.plot(df['Kernel'],df['Accuracy'],'r--')
plt.xlabel('Kernel')
plt.ylabel('Accuracy')
plt.title('Accuracy vs Kernel size')
plt.grid(True)
plt.show()

