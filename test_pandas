import os
import pandas as pd
test_loss = 0.047
correct = 9888
Kernel_size = 3
Loss = test_loss
Accurracy = 100. * correct / 10000
Index = 1
filename = r'C:/Users/vmanukyan/Documents/dev/thesis/nets/Training_Data.csv'
data= {'Kernel' : Kernel_size, 'Loss' : Loss, 'Accuracy': Accurracy }
# Convert the dictionary into DataFrame
df = pd.DataFrame(data)
#df.to_csv(filename, mode='a', index=False, header=False)
df.to_csv( filename, mode='a')

