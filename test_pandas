plt.ylabel('Accuracy')
plt.title('Accuracy vs Kernel size')
plt.grid(True)
plt.show()

#%%
Index = 1
import csv   
with open(filename, 'a') as f:
    #fields=[Index ,Index*2,Index*3,Index*4]
    #dict = {'Index': 1, 'Kernel': 3, 'Loss': 0.5, 'Accuracy': 97}
    dict = {'ID': 6, 'NAME': 'William', 'RANK': 5532,
        'ARTICLE': 1, 'COUNTRY': 'UAE'}
    writer = csv.writer(f,delimiter=';')
    writer.writerow(dict)
    f.close()

# %%
df = pd.read_csv(filename, sep = ";")
print (df)
# %%
# Import DictWriter class from CSV module
from csv import DictWriter
 
# list of column names
field_names = ['ID', 'NAME', 'RANK',
               'ARTICLE', 'COUNTRY']
 
# Dictionary that we want to add as a new row
dict = {'ID': 6, 'NAME': 'William', 'RANK': 5532,
        'ARTICLE': 1, 'COUNTRY': 'UAE'}
 
# Open CSV file in append mode
# Create a file object for this file
with open('event.csv', 'a') as f_object:
 
    # Pass the file object and a list
    # of column names to DictWriter()
    # You will get a object of DictWriter
    dictwriter_object = DictWriter(f_object, fieldnames=field_names, delimiter=";")
 
    # Pass the dictionary as an argument to the Writerow()
    dictwriter_object.writerow(dict)
 
    # Close the file object
    f_object.close()
# %%
df = pd.read_csv('event.csv', sep = ";")
print (df)
# %%
